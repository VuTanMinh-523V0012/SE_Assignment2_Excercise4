@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-4">
    <h1 class="display-4">Welcome to Order Management System</h1>
    <p class="lead mt-4">Choose an option from the menu to manage your data</p>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Manage Items</h5>
                </div>
                <div class="card-body">
                    <p>Add, edit, view or delete your product items.</p>
                    <a asp-controller="Items" asp-action="Index" class="btn btn-outline-primary">Go to Items</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Manage Agents</h5>
                </div>
                <div class="card-body">
                    <p>Add, edit, view or delete your agents.</p>
                    <a asp-controller="Agents" asp-action="Index" class="btn btn-outline-success">Go to Agents</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Manage Orders</h5>
                </div>
                <div class="card-body">
                    <p>Create and manage orders with multiple items.</p>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-info">Go to Orders</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">Best Selling Items</h5>
                </div>
                <div class="card-body">
                    <p>View your best selling items report.</p>
                    <a asp-controller="Orders" asp-action="BestItems" class="btn btn-outline-warning">View Report</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Items by Agent</h5>
                </div>
                <div class="card-body">
                    <p>View items purchased by a specific agent.</p>
                    <a asp-controller="Orders" asp-action="ItemsByAgent" class="btn btn-outline-secondary">View Report</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Agents by Item</h5>
                </div>
                <div class="card-body">
                    <p>View agents who purchased a specific item.</p>
                    <a asp-controller="Orders" asp-action="AgentsByItem" class="btn btn-outline-danger">View Report</a>
                </div>
            </div>
        </div>
    </div>
</div>